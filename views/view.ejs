    <div id="delete_message" class="alert flex-column m-0 p-4 gap-4">
        <div class="head d-flex justify-content-between">
            <h3 class=" ">Delete Employee</h3>
            <button onclick="form_hide()" class="close_btn d-flex"><i class="fa-solid fa-xmark"></i></button>
        </div>
        <p class="my-4">Are you sure you want to delete this employee?</p>
        <div class="pt-4 d-flex justify-content-end bg footer">
            <button onclick="form_hide()" class="btn btn-light me-2">Cancel</button>
            <button onclick="form_hide()" id="delete_btn" class="btn btn-primary ">Delete</button>
        </div>
    </div>
    <div id="successpopup" class="successpopup d-flex align-items-center p-3 rounded-4">
        <div id="successAnimation" class="success-animation me-3">
            <svg id="checkmark" class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"><circle id="checkmarkCircle" class="checkmark__circle" cx="26" cy="26" r="25" fill="none" /><path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" /></svg>
            <img  id="trashImg" src="\img\bin.png">
            <img  id="editPopImg" src="\img\edit.png">
        </div>
        <div class="popupContent">
            <h5 id="popHead" class="m-0 fw-bold">SUCCESS!</h5> 
            <p id="popSubhead" class="m-0 text-dark">Employee added successfully!</p>
        </div>
